<%- include('./partials/header') %> <% if (error && error.length > 0) { %>
<div
  class="fixed top-5 left-1/2 -translate-x-1/2 z-50 px-5 py-2 rounded bg-red-600 text-white shadow-lg"
>
  <%= error %>
</div>
<% } %>

<!-- MAIN WRAPPER -->
<div
  class="min-h-screen bg-gray-50 flex flex-col lg:flex-row lg:space-x-8 px-6 lg:px-20 py-10"
>
  <!-- SIDEBAR -->
  <aside
    class="w-full lg:w-64 bg-white shadow-md rounded-lg p-6 space-y-10 mb-10 lg:mb-0"
  >
    <!-- Sort -->
    <div>
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Sort by</h3>
      <form action="/shop">
        <select
          name="sortby"
          class="w-full border-gray-300 rounded-lg py-2 px-3 focus:ring-2 focus:ring-indigo-500"
        >
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <!-- Categories -->
    <div>
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Categories</h3>
      <nav class="space-y-2 text-sm flex flex-col">
        <a href="#" class="text-gray-600 hover:text-indigo-600"
          >New Collection</a
        >
        <a href="#" class="text-gray-600 hover:text-indigo-600">All Products</a>
        <a href="#" class="text-gray-600 hover:text-indigo-600"
          >Discounted Products</a
        >
      </nav>
    </div>

    <!-- Filters -->
    <div>
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Filter by</h3>
      <nav class="space-y-2 text-sm flex flex-col ">
        <a href="#" class="text-gray-600 hover:text-indigo-600">Availability</a>
        <a href="#" class="text-gray-600 hover:text-indigo-600">Discount</a>
      </nav>
    </div>
  </aside>

  <!-- PRODUCT GRID -->
  <section class="flex-1">
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% products.forEach((product) => { %>
      <div
        class="bg-white rounded-lg shadow-md hover:shadow-lg transition group"
      >
        <!-- Image area -->
        <div
          class="h-48 flex items-center justify-center rounded-t-lg bg-[<%= product.bgcolor %>]"
        >
          <img
            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
            alt="<%= product.name %>"
            class="h-36 object-contain transition-transform duration-500 group-hover:scale-105"
          />
        </div>
        <!-- Details -->
        <div
          class="p-5 flex justify-between items-center bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>] rounded-b-lg"
        >
          <div>
            <h4 class="font-semibold truncate"><%= product.name %></h4>
            <p class="text-sm">â‚¹ <%= product.price %></p>
          </div>
          <a
            href="/addtocart/<%= product._id %>"
            class="w-8 h-8 flex items-center justify-center rounded-full bg-white text-gray-700 hover:bg-indigo-500 hover:text-white transition"
          >
            <i class="ri-add-line text-lg"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
</div>

<%- include('./partials/footer') %>
